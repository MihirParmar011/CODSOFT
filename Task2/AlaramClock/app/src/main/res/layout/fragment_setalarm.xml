<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".setalarm">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/snoozeCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Enable Snooze"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/snoozeTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snooze Time: "
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <NumberPicker
            android:id="@+id/snoozeTimeNumberPicker"
            android:layout_width="match_parent"
            android:layout_height="111dp"
            />

        <RadioGroup
            android:id="@+id/amPmRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >
<!--            android:orientation="horizontal">-->


            <RadioButton
                android:id="@+id/amRadioButton"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:text="AM"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/pmRadioButton"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:text="PM"
                android:textColor="@color/white"/>
        </RadioGroup>

        <Button
            android:id="@+id/saveAlarmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/white"
            android:text="Save Alarm"
            android:textColor="@color/black" />
    </LinearLayout>
</ScrollView>

